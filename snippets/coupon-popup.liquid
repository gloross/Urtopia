<script>
  function copyCouponCode(){
    var dummy = document.createElement("textarea");
    var codeText = document.querySelector('#coupon-code').innerText;
    document.body.appendChild(dummy);
    dummy.value = codeText;
    dummy.select();
    document.execCommand("copy");
    document.body.removeChild(dummy);

  }
  function closePopup(){
    document.querySelector(".coupon-popup").classList.add("display-hidden");
    window.localStorage.setItem("codsan-shown14",new Date().getTime());
  }
</script>