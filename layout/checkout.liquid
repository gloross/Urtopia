    padding-bottom: 1.5em;
  }

  .origin-old-price {
    position: relative;
    top: -15px;
    text-align: right;
    text-decoration: line-through;
    opacity: .7;
  }

  .hidden {
    display: none !important;
  }

  #note-info {
    padding: 0;
    border: 0;
  }

  .notification-tips {
    display: flex;
    margin: 0 0 9px 0;
    padding: 3px 15px;
    font-size: 14px;
    text-align: left;
    color: #ff612f;
    background-color: #EDEEEE;
    align-items: center;
    justify-content: flex-end;
  }

  .notification-tips img {
    width: 28px;
    margin-right: 11px;
  }

  .note-credit {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 9px;
    background-color: #F4F8FD;
    border-radius: 5px;
    font: normal normal 500 16px/19px Urbane;
    letter-spacing: 0px;
    color: #000000;
  }

  .credit-icon {
    width: 28px;
    margin-right: 10px;
  }

  .note-img {
    margin: 9px 0;
    border-radius: 10px;
  }

  .note-info-wrapper {
    max-width: 100%;
    padding: 15px;
    background: #f1f1f1;
    border: 1px solid #f1f1f1;
    border-radius: 4px;
  }

  .note-info-wrapper>p {
    font-size: 20px;
    font-weight: bold;
  }

  .note-info-wrapper>ul {
    margin-left: 15px;
    list-style-type: initial;
  }

  .note-info-wrapper>ul>li {
    font-size: 14px;
  }

  li::marker {
    color: #fd4b17;
  }

  .produt-list-toggle__text {
    display: none;
    cursor: pointer;
    margin-bottom: 15px;
  }

  .produt-list-toggle__text.product-list-toggle__text--show {
    margin-bottom: 0;
  }

  .discount-code-tip {
    display: none;
  }

  @media (min-width: 1000px) {
    .order-summary__section {
      -webkit-box-flex: 0;
      -webkit-flex: 0 0 auto;
      -ms-flex: 0 0 auto;
      flex: 0 0 auto;
    }
  }

  @media (max-width: 1000px) {
    .product-table>tbody {
      visibility: hidden;
      position: absolute;
    }
  }

