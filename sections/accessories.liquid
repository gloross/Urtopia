    "name": "accessories",
	"class":"accessories",
    "settings": [
		{
			"type":"image_picker",
			"id":"img",
			"label":"图片"
		}
	],
	"blocks":[
		{
			"type":"list",
			"name":"list",
            "settings": [
                {
                    "type":"text",
                    "id":"title",
                    "label":"title"
                },
				{
                    "type":"text",
                    "id":"des",
                    "label":"des"
                }
            ]
		}
	]
  }
{% endschema %}



