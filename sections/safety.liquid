

<div id="safefyContainer" class="pinContainer">
	<div class="slideContainer">
		<section id="safety-container">
            <div class="container pcBox">
            	<div class="title">For Safety, More is More</div>
                <div class="bottomItem">
                  <img
                      id="safetyBike"
                       src="https://cdn.shopify.com/s/files/1/0583/5810/4213/files/safeBike1.png?v=1657477515"
                     />
                  <img
                      id="safetyBike2"
                      style="display:none"
                       src="https://cdn.shopify.com/s/files/1/0583/5810/4213/files/safetBike2.png?v=1657477618"
                     />
                  <div class="safetyText">
                    <div class="title">Smart StVZO Headlight</div>
                    <div class="des" style="color:#FFF">Compliant with German Road Traffic Licensing Regulations, the ambient-light auto-controllable headlight can also be switched on and off via your voice, a Smartbar button, or the app.</div>
                  </div>
                </div>
            </div>
          
          	<div class="container mobileBox">
            	
                <div class="safetyMobileBox">
					<div class="safetyTitle">
                      For Safety,
                      <br>
                      More is More
                  </div>
                 
                  <div class="safetyText">
                    <div class="title">Smart StVZO Headlight</div>
                    <div class="des" style="color:#FFF">Compliant with German Road Traffic Licensing Regulations, the ambient-light auto-controllable headlight can also be switched on and off via your voice, a Smartbar button, or the app.</div>
                  </div>

                  <img
                       id="mobileSafetyBike2"
                       src="https://cdn.shopify.com/s/files/1/0583/5810/4213/files/safetBike2.png?v=1657477618"
                       />
                </div>
            </div>
        </section>
	</div>
</div>

  <script>
    
    new ScrollMagic.Scene({
				triggerElement: "#safefyContainer",
				triggerHook: "onLeave",       
				duration: window.innerWidth>990 && navigator.userAgent.indexOf('Mobile')<0 ? 4200 : 1200
			})
			.setPin("#safefyContainer")
			.addTo(controller);
    
    var safetyAnimation
    if(window.innerWidth>990 && navigator.userAgent.indexOf('Mobile')<0 ){
      
         safetyAnimation= new TimelineMax()
            .add([
                   TweenMax.set("#safety-container .container .bottomItem>#safetyBike2", {display:"block"}),
                  TweenMax.to("#safety-container .container .bottomItem>#safetyBike2", 0.8,{opacity:1})
              ])
            .add([
                  TweenMax.set("#safety-container .container .bottomItem>#safetyBike",{opacity:0,delay:0.2})
              ])

             .add([
                  TweenMax.to("#safety-container .container .bottomItem>#safetyBike2", 1.2, {scale:2,x:-235,y:140}),  
                   TweenMax.to("#safety-container .container .bottomItem>.safetyText", 1.2, {x:50,y:"-75%",opacity:1})
              ])
    }else{
      
    	safetyAnimation= new TimelineMax()
            .add([
                  TweenMax.to("#safety-container > .container.mobileBox .safetyTitle", 0.2,{opacity:0})
              ])
             .add([
          		  TweenMax.to("#safety-container > .container.mobileBox .safetyText", 0.8, {x:0,y:0,opacity:1}),  
                   TweenMax.to(".safety .mobileBox .safetyMobileBox #mobileSafetyBike2", 0.8, {scale:3,x:-30,y:55,opacity:1})
              ])
    	
    }
    
    
    new ScrollMagic.Scene({
				triggerElement: "#safefyContainer",
				triggerHook: "onLeave", 
                offset:200,
      			duration: window.innerWidth>990 && navigator.userAgent.indexOf('Mobile')<0 ? 4000 : 1000
			})
            .setTween(safetyAnimation)
			.addTo(controller);
    
  </script>

  <style>
    .safety{
      background-color:#000;
      overflow:hidden;
    }
    .slideContainer {
		width: 100%; 
		height: 100%;
	}
    #safefyContainer .slideContainer {
      	background-image:linear-gradient(169deg, #000000 10%, #292929 30%, #3b3b3b 50%, #000000 90%);
	}
    #safety-container{
      width: 100%; 
  	  height: 100%;
      display:flex;
      position:relative;
      align-items: center;
      justify-content: center;
     
    }
    #safety-container .container{
      width:calc(100vw*1160/1440);
      min-width:1160px;
      max-width:1440px;
      
    }
    #safety-container .container>.title,
    .safetyTitle{
      margin-top:80px;
      font-size: 48px;
      font-weight: 600;
      color:#fff;
      text-align:center;
      text-shadow: 0px 0px 30px #FFFF00;
    }
    #safety-container .container .bottomItem{
      position:relative;
      border-radius:30px;
    }
    #safety-container .container .bottomItem>.safetyText{
      width:50%;
      position:absolute;
      right:0;
      top:50%;
      transform: translate(100px, 100px);
      color:#fff;
      opacity:0;
    }
    #safety-container .safetyText>.title{
      margin-bottom:24px;
      white-space:normal;
      font-size: 36px;
    }
    #safetyBike2{
      opacity:0;
      position:absolute;
      top:0;
      left:0;
    }
    #safety-container .safetyText>.title{
      color:#fff;
      font-weight:550;
      text-align:left;
    }
    #safety-container .safetyText>.des{
      font-weight:100;
    }
    .safetyTitle{
      margin-top:0px;
      line-height:54px;     
    }

    @media screen and (max-width: 990px){
      .safety .mobileBox{
        height:calc(100vh - 70px);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
      }
      .safety .mobileBox #safetyBike2{
        transform: matrix(3, 0, 0, 3, -37, 85);
        position: static;
        opacity:1;
      }
      .safety .mobileBox .safetyMobileBox{
        width:100%;
         overflow:hidden;
        position:relative;
      }
      .safety .mobileBox .title{
        color:#fff;
        font-size:30px;
        line-height:42px;
      }
      .safety .mobileBox .des{
        max-width:100%;
        white-space:normal;
        font-size:14px;
        line-height:19.6px;
      }
      .safety .mobileBox .safetyMobileBox .safetyText{
        width:84%;
        margin: 0 auto;
        margin-bottom: 50px;
        opacity:0;
        transform: translate(0%, 25%);
      }
      .safety .mobileBox .safetyMobileBox #mobileSafetyBike2{
      	opacity:0;
        transform: translate(0%, -25%);
      }
      #safety-container .container.mobileBox{
      	width:84%;
        min-width:auto;
        max-width:auto;
        position:relative;
      }
      #safety-container .container.mobileBox .safetyTitle{
        width:100%;
      	position:absolute;
        top:50%;
        left:50%;
        transform: translate(-50%, -50%);
      }
    }
    
  </style>

