  <script>
    if(navigator.userAgent.indexOf('Mobile')>=0){
    	document.querySelector("#slideContainer .content #bike").src="https://cdn.shopify.com/s/files/1/0633/2068/6808/files/20220716-135202.png?v=1657950762"
        document.querySelector("#slideContainer .content #bike2").src="https://cdn.shopify.com/s/files/1/0633/2068/6808/files/20220714-094914.png?v=1657763409"
    }
    
      var wipeAnimation = new TimelineMax()
      
      if(window.innerWidth>990 && navigator.userAgent.indexOf('Mobile')<0){
      	wipeAnimation
          .staggerTo(
            ["#slideContainer .content .topText .state1","#slideContainer .content #moveBtn","#slideContainer .content #mobile"], 
            2, 
            {y: "-50%",opacity:0,delay:1}, 
            0)   
         .add(TweenMax.set("#slideContainer .content #moveBtn", {display:"none",delay:0.5}))
        .add([
         		  TweenMax.to(".panel>.bg1", 1, {opacity:1}), 
                  TweenMax.to("#slideContainer .content .bottomImg>.state1 #bike2",1,{opacity:1}),
            	  TweenMax.to("#slideContainer .content .topText .state2", 2, {y: "-100%",opacity:1,delay:0.5}), 
                  TweenMax.to("#slideContainer .content .bottomImg>.state2", 2, {y: "-70%",opacity:1,delay:0.5}), 
				  TweenMax.set(".changeCircle", {opacity:1,delay:2})
         		  
          ])
      }else{
      	wipeAnimation
        .staggerTo(
          ["#slideContainer .content .topText .state1","#slideContainer .content #moveBtn","#slideContainer .content #mobile"], 
          0.5, 
          {y: "-50%",opacity:0,delay:0.5}, 
          0)   
        .add(TweenMax.set("#slideContainer .content #moveBtn", {display:"none",delay:0.5}))
        .add([
         		  TweenMax.to(".panel>.bg1", 0.5, {opacity:1}), 
                  TweenMax.to("#slideContainer .content .bottomImg>.state1 #bike2",0.5,{opacity:1}),
            	  TweenMax.to("#slideContainer .content .topText .state2", 0.5, {y: "-100%",opacity:1}), 
          		  TweenMax.to(".panel .content .bottomImg .state2", 0.5, {y: "0%",opacity:1,delay:1}),
          		  TweenMax.to(".panel .content .bottomImg .state2 .item:nth-child(1)", 0.5, {opacity:0,delay:1.5}),	      	  
                  TweenMax.to(".panel .content .bottomImg .state2 .item:nth-child(3)", 0.5, {y: "-100%",opacity:1,delay:2}),
				  TweenMax.set(".changeCircle", {opacity:1,delay:2})
         		  
          ])
      	
      }
  
  
  
      new ScrollMagic.Scene({
  				triggerElement: "#pinContainer",
  				triggerHook: "onLeave",
  				duration: "4500"
  			})
  			.setPin("#pinContainer")
  			.addTo(controller);
  
      new ScrollMagic.Scene({
  				triggerElement: "#pinContainer",
                  triggerHook: "onLeave",
                  offset:500,               
  				duration: "4000"
  			})
              .setTween(wipeAnimation)
  			.addTo(controller);

//       }
  </script>
