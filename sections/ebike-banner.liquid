   font-size:100px;
    font-weight:600;
    color:#fff;
    text-align:right;
  }
  .ebikebanner .textContainer p:nth-child(3){
    color:#fff;
    font-size:48px;
  }
  .ebikebanner .container .state1Top .title{
    margin-bottom:40px;
    font-size:60px;
    font-weight:600;
    text-align:center;
  }
  .container .state1Top {
    flex: 0 0 40%;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }
  .container .stateBottom{
    flex:0 0 60%;
  }
  #ebikebanner1 .container .state1Top{
    opacity:1;
  }
  #ebikebanner1 .container .stateBottom{
    opacity:1;
  }
